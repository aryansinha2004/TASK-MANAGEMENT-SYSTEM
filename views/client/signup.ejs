<%- include("../includes/header.ejs") %>

<section class="min-h-[calc(100vh-75px)] flex flex-wrap w-full items-center md:items-stretch justify-center md:justify-between py-4 md:py-0">
    <div class="flex-1 hidden md:flex items-center justify-center "><img src="/images/Signup.png"></div>
    <form action="/signup" method="POST" class="text-tertiary bg-primary text-md md:text-xl md:px-16 p-8 md:py-0 flex flex-col justify-center rounded md:rounded-none">
        <h1 class="text-secondary text-3xl mb-12">Create your Company</h1>
        <div class="form-control border-b-2 mb-4">
            <label for="company" class="block"> Company: </label>
            <input type="text" id="company" name="company" required class="outline-none w-full bg-transparent">
        </div>
        <div class="form-control border-b-2 mb-4">
            <label for="name" class="block"> Name: </label>
            <input type="text" id="name" name="name" required class="outline-none w-full bg-transparent">
        </div>
        <div class="form-control border-b-2 mb-4">
            <label for="email" class="block"> Email: </label>
            <input type="email" id="email" name="email" required class="outline-none w-full bg-transparent">
        </div>
        <div class="form-control border-b-2 mb-4">
            <label for="phone" class="block"> Phone: </label>
            <input type="tel" id="phone" name="phone" required class="outline-none w-full bg-transparent">
        </div>
        <div class="form-control py-4">
            <label for="image">Image: </label>
            <input type="file" name="image" id="image">
        </div>
        <div class="border-b-2 mb-12">
            <label for="password" class="block"> Password: </label>
            <input type="password" id="password" name="password" required class="outline-none w-full bg-transparent">
        </div>
        <input type="submit" value="Sign Up" class=" hover:bg-quarternary bg-secondary cursor-pointer py-2 rounded-full">
    </form>
</section>

<%- include("../includes/footer.ejs") %>